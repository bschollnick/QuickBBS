                        <a href="/viewer2/{{ first_uuid }}?sort={{sort}}" id="first_uuid" hx-swap="outerHTML transition:true">
                        {{ icon("angle-double-left fa-3x")}}</a></p>
                        <hr style="padding:2px;margin:2px">
                        <p align=center id="previous_icon">
                        <a href="/viewer2/{{ previous_uuid }}?sort={{sort}}" id="previous_uuid" hx-swap="outerHTML transition:true">
                        {{ icon("angle-left fa-3x")}}</a></p>
                    {% else %}
                        <p align=center>
                        {{ icon("angle-double-left fa-3x")}}</p>
                        <hr style="padding:2px;margin:2px">
                        <p align=center id="previous_icon">
                        {{ icon("angle-left fa-3x")}}</p>
                    {% endif %}
                    <hr style="padding:2px;margin:2px">
                    <center>
                        <p id="pages">Page <br>
                        {{ page }}
                        <br> of
                        <br> {{ pagecount }}
                        </center>
                    <hr style="padding:2px;margin:2px">

                    {% if next_uuid %}
