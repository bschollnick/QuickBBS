{% extends 'frontend/gallery_base.jinja' %}

{% block title%}
{% endblock %}

{% block content %}
<script src="/resources/javascript/jquery.lazy.min.js"></script>
    <!-- sidebar -->
    <div class="container" style="width:99%">
      <div class="row">
        <div class="col-xs-6 col-sm-3" id="sidebar" role="navigation">
            <div class="pagination">
                <a href="{{ up_uri }}"><img src="/resources/images/Go_Up2.png" width="75%"></a>
                <hr>
                <a href="?page=1">
                    <img width="75%" height="75%" src="/resources/images/gtk_media_next_rtl.png"/></a>
                <hr>
                <span class="step-links">
                    {% if pagelist.has_previous() %}
                        <a href="?page={{ pagelist.previous_page_number() }}">
                            <img width="75%" height="75%" src="/resources/images/gtk_media_rev_ltr.png"/></a>
                    {% else %}
                            <img width="75%" height="75%" src="/resources/images/gtk_media_empty.png"/>
                    {% endif %}
                <hr>
                    <span class="current" align=center>
                    <form action="?" method="GET">
                    Page
                        <select name="page" onchange='this.form.submit()'>
                            {% for pagecnt in page_cnt %}
                                <option value="{{pagecnt}}" {% if pagecnt == pagelist.number %}selected{% endif %}>{{pagecnt}}</option>
                            {% endfor %}
                        </select><br>
                        of {{ pagelist.paginator.num_pages }}.
                    </form>
                    </span>
                <hr>

                    {% if pagelist.has_next() %}
                        <a href="?page={{ pagelist.next_page_number() }}">
                            <img width="75%" height="75%" src="/resources/images/gtk_media_play_ltr.png"/></a>
                    {% else %}
                            <img width="75%" height="75%" src="/resources/images/gtk_media_empty.png"/>
                    {% endif %}
                <hr>

                <a href="?page={{ pagelist.paginator.num_pages }}">
                    <img width="75%" height="75%" src="/resources/images/gtk_media_next_ltr.png"/></a>
                </span>
                <hr>
                    <form action="?page={{ current_page }}" method="GET">
                    {% csrf_token %}
                        <select name="sort" onchange='this.form.submit()'>
                            <option value="0" {% if sort_order == 0 %}selected{% endif %}>A..Z</option>
                            <option value="1" {% if sort_order == 1 %}selected{% endif %}>LastM</option>
                            <option value="2" {% if sort_order == 2 %}selected{% endif %}>CTime</option>
                        </select>
                    </form>
                <hr>
            </div>
        </div>
<!-- main area -->
         <div class="container-fluid" style="margin-left: 45px;margin-right:1px;border: 0px solid;padding-left:2px;padding-right:2px;background:#b0e2ff;">
             <table border=0 width="97%">
                <tr>
                <td width="25%" align=left> <a href="{{ prev_uri }}">{{ prev_uri }}</a></td>
                <td width="50%" align=center><b>{{ gallery_name }}</b></td>
                <td width="25%" align=right> <a href="{{ next_uri }}">{{ next_uri }}</a></td>
                </tr>
             </table>
                    <div class="row" width="auto" style="margin-left: 0px;margin-right:0px;border: 0px solid;padding-left:2px;padding-right:2px;background:#b0e2ff;">
                    {% for item in pagelist %}
                                <div class="col-xs-6 col-sm-4">
                                    <center>
                                        {{ loop.index }} <br>
                                        <a href="{{ webpath }}/{{ item.Name }}" class="thumbnail" style="background:{{backgroundclr}};">
                                                {{ item.Name | wordwrap(width=25, break_long_words=True)}}
                                                <br>
                                            {% if item.is_dir %}
                                                <img class="lazy" src="/resources/images/loading17.gif" data-src="{{ thumbpath }}/{{ item.Name }}?dir&size={{small}}" class="img-responsive" style="width:auto;max-width:100%"/>
                                            {% elif item.is_pdf %}
                                                <img class="lazy" src="/resources/images/loading17.gif" data-src="{{ thumbpath }}/{{ item.Name}}?pdf&size={{small}}" class="img-responsive" style="width:auto;max-width:100%"/>
                                            {% elif item.is_archive %}
                                                <img class="lazy" src="/resources/images/loading17.gif" data-src="{{ thumbpath }}/{{ item.Name}}?arch=0&size={{small}}" class="img-responsive" style="width:auto;max-width:100%"/>
                                            {% else %}
                                                <img class="lazy" src="/resources/images/loading17.gif" data-src="{{ thumbpath }}/{{ item.Name}}?size={{small}}" class="img-responsive" style="width:auto;max-width:100%"/>
                                            {% endif %}

                                        </a>
                                        {% if item.NumDirs != None and item.NumDirs != 0%}
                                            <b># of Dirs: </b>{{ item.NumDirs | intcomma }}<br>
                                        {% endif %}

                                        {% if item.NumFiles != None and item.NumFiles != 0 %}
                                            <b># of Files: </b>{{ item.NumFiles | intcomma }}<br>
                                        {% endif %}
                                        {% if item.is_dir != True and item.Size != None and item.Size != 0 %}
                                            <b>File Size: </b>{{ item.Size | intcomma}}<br>
                                        {% endif %}

                                        <b>Last Modified: </b>{{ fromtimestamp( item.LastMod).strftime("%m/%d/%y %H:%M:%S") }}<br>
                                                                    <a href="{{ webpath }}/{{ item.Name }}" target="_blank">
                                <img src="/resources/images/stock_new_window.png" align=right height="15%" width="15%"></a>

                                    </center>
                                </div>

                            <!-- if last column in row -->
                            {% if loop.index is divisibleby 3 %}
                                </div> <div class="row" style="margin-left: 0px;margin-right:0px;border: 0px solid;padding-left:2px;padding-right:2px;background:#b0e2ff;">
                            {% endif %}

                    {% endfor %}
            </div>


        </div><!-- /.col-xs-12 main -->
    </div><!--/.row-->
  </div><!--/.container-->
 </center>
<script>
$(function($) {
    $("img.lazy").Lazy({
    scrollDirection: 'vertical',
        effect: 'fadeIn',
        visibleOnly: true,
        delay: 300,
        threshold: 200,
        combined: true
});
});
</script>
{% endblock %}
