{% block content %}
<title>{{ gallery_name }}</title>

<script>
// Clear HTMX localStorage cache on search results page load
// This prevents HTMX from restoring cached search results from previous searches
if (typeof(Storage) !== "undefined" && localStorage.getItem("htmx-history-cache")) {
    localStorage.removeItem("htmx-history-cache");
}
</script>

